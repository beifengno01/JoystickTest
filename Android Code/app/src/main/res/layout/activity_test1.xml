<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".test1"
    android:id="@+id/main">

    <com.rpappa.ryan.joysticktest.JoystickView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/joy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <requestFocus />
    </com.rpappa.ryan.joysticktest.JoystickView>

    <com.rpappa.ryan.joysticktest.ControllerView
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.rpappa.ryan.joysticktest.SliderView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/slide1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/joy" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="Fire!"
        android:id="@+id/button"
        android:background="#ff0011"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/slide1"
        android:layout_alignEnd="@+id/slide1" />

</RelativeLayout>
