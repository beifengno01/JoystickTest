<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".test1">

    <TextView
        android:id="@+id/textThing"
    android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.rpappa.ryan.joysticktest.JoystickView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/joy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.rpappa.ryan.joysticktest.JoystickView>

    <com.rpappa.ryan.joysticktest.SliderView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/slide1"
        android:layout_alignTop="@+id/joy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/joy"
        android:layout_toLeftOf="@+id/slide1"
        android:layout_toStartOf="@+id/slide1">

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:text="Fire!"
            android:id="@+id/button"
            android:background="#ff0011"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
